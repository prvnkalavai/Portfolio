{
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST"]
    },
    {
      "route": "/index.html",
      "headers": {
        "cache-control": "no-cache"
      }
    },
    {
      "route": "/*",
      "rewrite": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/api/*", "/icons/*"]
  },
  "mimeTypes": {
    ".html": "text/html",
    ".json": "text/json",
    ".css": "text/css",
    ".js": "application/javascript",
    ".svg": "image/svg+xml",
    ".png": "image/png"
  }
}